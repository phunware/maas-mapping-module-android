<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="colorOnBackground">@color/mine_shaft</item>

        <!-- Primary brand colors. -->
        <item name="colorPrimary">@color/azure_radiance</item>
        <item name="colorPrimaryVariant">@color/azure_radiance_variant</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/congress_blue</item>
        <item name="colorSecondaryVariant">@color/link_water</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Colors for "cards" -->
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@color/mine_shaft</item>

        <!-- Additional colors -->
        <item name="colorError">@color/persian_red</item>
        <item name="colorOnError">@android:color/white</item>

        <!-- Customize your theme here. -->
        <item name="smartMapPoiFallbackImage">@drawable/ic_poi_default</item>
        <item name="smartMapPoiDetailHeaderFallbackImage">@drawable/poi_detail_header_placeholder_image</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">false</item>

        <!--  Typography   -->
        <!-- Material 2 type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.App.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.App.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.App.Headline3</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.App.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.App.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.App.Body2</item>
        <item name="textAppearanceOverline">@style/TextAppearance.App.Overline</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
        <item name="android:textAppearanceButton">@style/TextAppearance.App.Button</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- customize the permissions theme to match the app -->
    <style name="PermissionsTheme" parent="AppTheme" />
</resources>